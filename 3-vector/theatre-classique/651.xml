		<castItem><role id="NANETTE" civil="F" type="H" statut="bourgeois" age="A" stat_amour='néant'>NANETTE</role>, Melle Superville.</castItem>
		<castItem><role id="BABET" civil="F" type="H" statut="bourgeois" age="A" stat_amour='néant'>BABET</role>, Mlle. Dazincourt.</castItem>
		<castItem><role id="FANCHON" civil="F" type="H" statut="bourgeois" age="A" stat_amour='néant'>FANCHON</role>, Mlle. [?]</castItem>
		<castItem><role id="JAVOTTE" civil="F" type="H" statut="bourgeois" age="A" stat_amour='néant'>JAVOTTE</role>, Mlle, le Clerc.</castItem>
		<castItem><role id="UN MARCHAND DE CHANSON" civil="M" type="H" statut="commerçant" age="A" stat_amour='néant'>UN MARCHAND DE CHANSON</role>, M. de Lisle.</castItem>
		<castItem><role id="UNE MARCHANDE DE CHANSON" civil="F" type="H" statut="commerçant" age="A" stat_amour='néant'>UNE MARCHANDE DE CHANSON</role>, Me. Paran.</castItem>
		<castItem><role id="PREMIÈRE MARMOTTE" civil="F" type="H" statut="bourgeois" age="E" stat_amour='néant'>PREMIÈRE MARMOTTE</role>, Mlle. Prudhomme.</castItem>
		<castItem><role id="SECONDE MARMOTTE" civil="F" type="H" statut="bourgeois" age="E" stat_amour='néant'>SECONDE MARMOTTE</role>, Mlle Luzi.</castItem>
